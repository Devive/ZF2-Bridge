{
    "name": "php-di/zf2-bridge",
    "type": "library",
    "description": "Integrates PHP-DI to Zend Framework 2",
    "homepage": "https://github.com/PHP-DI/ZF2-Bridge",
    "license": "MIT",
    "require": {
        "php": ">=5.4",
        "php-di/php-di": "~5.0",
        "acclimate/container": "*",
        "doctrine/annotations": "~1.0",
        "doctrine/cache": "~1.0"
    },

    "require-dev": {
        "zendframework/zendframework": "2.5.*",
        "squizlabs/php_codesniffer": "2.*",
        "phpmd/phpmd" : "@stable",
        "phpunit/phpunit": "4.8.*"
    },

    "autoload": {
        "classmap": [
          "src/", "vendor/", "tests"
        ]
    }
}
